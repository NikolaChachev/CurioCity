<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurioCity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/ActionBarStyle</item>

        <item name="android:textViewStyle">@style/TextStyle</item>

    </style>

    <style name="TextStyle" parent="android:Widget.TextView" >
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="background">@color/colorSecondary</item>
        <item name="backgroundColor">@color/colorSecondary</item>
    </style>
</resources>