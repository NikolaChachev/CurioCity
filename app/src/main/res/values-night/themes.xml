<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurioCity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSecondary</item> // should be same as color primary
        <item name="colorOnSurface">@color/white</item> // same as color on primary

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/TextStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorSecondary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_home_black_24dp</item>
        <item name="postSplashScreenTheme">@style/Theme.CurioCity</item>
    </style>

    <style name="TextStyle" parent="android:Widget.TextView" >
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
</resources>